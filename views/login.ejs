<!DOCTYPE html>
<html>
<head>
    <title>Login/Signup Form</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet"  href="../stylesheets/style.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3 form-container">
                <ul class="tabs teal">
                    <li class="tab col s6"><a class="white-text active" href="#login">Login</a></li>
                    <li class="tab col s6"><a class="white-text" href="#signup">Signup</a></li>
                </ul>
                <div id="login" class="col s12 form-content">
                    <div class="card-panel">
                        <h5>Login</h5>
                        <form>
                            <div class="input-field">
                                <input id="login_username" type="text" class="validate">
                                <label for="login_username">Username</label>
                            </div>
                            <div class="input-field">
                                <input id="login_password" type="password" class="validate">
                                <label for="login_password">Password</label>
                            </div>
                            <a href=""class="btn waves-effect waves-light teal darken-1" type="submit" name="action">submit</a>
                            <a href="/login/federated/google" class="btn waves-effect waves-light red darken-1 google-btn" type="button" name="action">sign in with google</a>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="script.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.tabs');
            var instances = M.Tabs.init(elems);
        });
        
    </script>
</body>
</html>
